{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@public/*": ["public/*"]
    },
    "allowJs": false,
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "typeRoots": ["@types", "node_modules/@types"],
    "types": ["node"],
    "skipLibCheck": true
  },
  "include": ["next-env.d.ts", "**.*.js", "**.*.jsx", "**/*.ts", "**/*.tsx", "**/*.json"],
  "exclude": [
    ".github",
    ".next",
    ".nyc_output",
    "coverage",
    "docs",
    "node_modules",
    "out",
    "src/util/server",
    "tests/unit-tests/*"
  ],
  "typedocOptions": {
    "entryPoints": ["pages", "src", "@types"],
    "out": "docs"
  }
}
